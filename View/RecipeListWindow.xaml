<Window x:Class="OPPNandoSalvatierraSYSM9.View.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPPNandoSalvatierraSYSM9.View"
        mc:Ignorable="d"
        Title="RecipeListWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- Title TextBlock -->
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Receptlista" 
                   FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,10" 
                   FontFamily="Magneto" FontWeight="Bold" Grid.ColumnSpan="2"/>

        <!-- Recipe List (placeholder for future implementation) -->
        <ListBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,10">
            <!-- Recipes will be displayed here in future implementation -->
        </ListBox>

        <!-- Logout Button -->
        <Button Grid.Column="2" Grid.Row="3" Content="Logga ut" 
                Command="{Binding LogoutCommand}" 
                FontSize="16" Width="100" Margin="0,10,0,10"/>
    </Grid>
</Window>
